<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Tree view for classrooms -->
    <record id="view_classroom_tree" model="ir.ui.view">
        <field name="name">classroom.list</field>
        <field name="model">school.classroom</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="section"/>
                <field name="teacher_id"/>
            </list>
        </field>
    </record>

    <!-- Form view for classrooms -->
    <record id="view_classroom_form" model="ir.ui.view">
        <field name="name">classroom.form</field>
        <field name="model">school.classroom</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="section"/>
                        <field name="teacher_id"/>
                    </group>

                    <notebook>
                        <page string="Students">
                            <!-- One2many field for students -->
                            <field name="student_ids">
                                <list>
                                    <field name="display_name"/>
                                    <field name="age"/>
                                    <field name="grade"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Classroom action -->
    <record id="action_classroom" model="ir.actions.act_window">
        <field name="name">Classrooms</field>
        <field name="res_model">school.classroom</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
