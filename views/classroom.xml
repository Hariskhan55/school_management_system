<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- LIST VIEW -->
    <record id="view_classroom_list" model="ir.ui.view">
        <field name="name">school.classroom.list</field>
        <field name="model">school.classroom</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="section"/>
                <field name="teacher_id"/>
            </list>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="view_classroom_form" model="ir.ui.view">
        <field name="name">school.classroom.form</field>
        <field name="model">school.classroom</field>
        <field name="arch" type="xml">
            <form string="Classroom">

                <!-- HEADER BUTTON -->
                <header>
                    <button name="%(school_management_system.action_classroom_pdf)d"
                            string="Print PDF"
                            type="action"
                            class="btn-primary"/>
                </header>

                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="section"/>
                        <field name="teacher_id"/>
                    </group>

                    <notebook>
                        <page string="Students">
                            <field name="student_ids">
                                <list>
                                    <field name="display_name"/>
                                    <field name="age"/>
                                    <field name="grade"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ACTION -->
    <record id="action_classroom" model="ir.actions.act_window">
        <field name="name">Classrooms</field>
        <field name="res_model">school.classroom</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
