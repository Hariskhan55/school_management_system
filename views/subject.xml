<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Subject List View -->
    <record id="view_subject_list" model="ir.ui.view">
        <field name="name">school.subject.list</field>
        <field name="model">school.subject</field>
        <field name="arch" type="xml">
            <list string="Subjects">
                <field name="name"/>
                <field name="teacher_ids"/>
                <field name="student_ids"/>
            </list>
        </field>
    </record>

    <!-- Subject Form View -->
    <record id="view_subject_form" model="ir.ui.view">
        <field name="name">school.subject.form</field>
        <field name="model">school.subject</field>
        <field name="arch" type="xml">
            <form string="Subject">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="teacher_ids" widget="many2many_tags"/>
                        <field name="student_ids" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action for Subjects -->
    <record id="action_subject" model="ir.actions.act_window">
        <field name="name">Subjects</field>
        <field name="res_model">school.subject</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
