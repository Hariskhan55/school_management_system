<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- STUDENT LIST VIEW -->
    <record id="view_student_list" model="ir.ui.view">
        <field name="name">school.student.list</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
            <list>
                <field name="display_name"/>
                <field name="age"/>
                <field name="grade"/>
                <field name="classroom_id"/>
                <field name="status"/>
                <field name="tuition_fee"/>
                <field name="parent_contact"/>
            </list>
        </field>
    </record>

    <!-- STUDENT FORM VIEW -->
    <record id="view_student_form" model="ir.ui.view">
        <field name="name">school.student.form</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
            <form string="Student">

                <!-- HEADER BUTTONS -->
                <header>
                    <button name="action_confirm_student" string="Confirm" type="object" class="btn-primary"/>
                    <button name="action_cancel_student" string="Cancel" type="object" class="btn-secondary"/>

                    <button name="%(school_management_system.action_student_pdf)d"
            string="Print PDF"
            type="action"
            class="btn-primary"/>

                </header>

                <sheet>

                    <!-- BASIC INFO -->
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="last_name"/>
                            <field name="display_name" readonly="1"/>
                            <field name="dob"/>
                            <field name="age" readonly="1"/>
                            <field name="parent_contact"/>
                        </group>

                        <group>
                            <field name="grade"/>
                            <field name="classroom_id"/>
                            <field name="subject_ids" widget="many2many_tags"/>
                        </group>
                    </group>

                    <!-- STATUS -->
                    <group string="Status">
                        <field name="status"/>
                        <field name="passing_date"/>
                        <field name="drop_date"/>
                    </group>

                    <!-- FEES -->
                    <group string="Fees">
                        <field name="currency_id"/>
                        <field name="tuition_fee"/>
                    </group>

                </sheet>
            </form>
        </field>
    </record>

    <!-- STUDENT ACTION -->
    <record id="action_student" model="ir.actions.act_window">
        <field name="name">Students</field>
        <field name="res_model">school.student</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
