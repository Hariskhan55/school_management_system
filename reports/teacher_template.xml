<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="report_teacher_pdf">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">

                <!-- HEADER -->
                <div style="width:100%; border-bottom: 2px solid #1a73e8; padding-bottom: 10px; margin-bottom: 20px;">
                    <table style="width:100%; border-collapse: collapse;">
                        <tr>
                            <td style="width:20%; text-align:left;">
                                <img src="your_logo_url_here" style="max-height:70px;"/>
                            </td>
                            <td style="width:60%; text-align:center;">
                                <h2 style="margin:0; color:#1a73e8;">Teacher Information Report</h2>
                                <p style="margin:5px 0 0 0; font-size:13px; color:#555;">
                                    <t t-esc="docs[0].display_name"/>
                                </p>
                            </td>
                            <td style="width:20%;"></td>
                        </tr>
                    </table>
                </div>

                <!-- BODY -->
                <div class="page" style="font-family: Arial, sans-serif; font-size: 12px; color:#333;">
                    <t t-foreach="docs" t-as="o">
                        <table style="width:70%; margin: 0 auto; border-collapse: collapse; border:1px solid #ccc;">
                            <tr style="background-color:#f5f7fa;">
                                <th colspan="2" style="padding:10px; text-align:center; color:#1a73e8; font-size:14px;">
                                    Teacher Details
                                </th>
                            </tr>

                            <tr>
                                <td style="padding:8px; font-weight:bold; border:1px solid #ccc;">Name</td>
                                <td style="padding:8px; border:1px solid #ccc;"><t t-esc="o.name"/></td>
                            </tr>

                            <tr style="background-color:#f9f9f9;">
                                <td style="padding:8px; font-weight:bold; border:1px solid #ccc;">Phone</td>
                                <td style="padding:8px; border:1px solid #ccc;"><t t-esc="o.phone"/></td>
                            </tr>

                            <tr>
                                <td style="padding:8px; font-weight:bold; border:1px solid #ccc;">Email</td>
                                <td style="padding:8px; border:1px solid #ccc;"><t t-esc="o.email"/></td>
                            </tr>

                            <tr style="background-color:#f9f9f9;">
                                <td style="padding:8px; font-weight:bold; border:1px solid #ccc;">Subjects</td>
                                <td style="padding:8px; border:1px solid #ccc;">
                                    <t t-foreach="o.subject_ids" t-as="s">
                                        <t t-esc="s.name"/>
                                        <t t-if="not s == o.subject_ids[-1]">, </t>
                                    </t>
                                </td>
                            </tr>

                            <tr>
                                <td style="padding:8px; font-weight:bold; border:1px solid #ccc;">Salary</td>
                                <td style="padding:8px; border:1px solid #ccc;">
                                    <t t-esc="o.currency_id.symbol"/> <t t-esc="o.salary"/>
                                </td>
                            </tr>
                        </table>
                    </t>
                </div>

                <!-- FOOTER -->
                <div style="width:100%; border-top: 2px solid #1a73e8; margin-top: 30px; padding-top: 8px; font-size:10px;">
                    <table style="width:100%;">
                        <tr>
                            <td style="text-align:left;">ðŸ“ž +92-300-1234567</td>
                            <td style="text-align:center;">ðŸ“§ info@school.com</td>
                            <td style="text-align:right;">Page <span class="page"/> / <span class="topage"/></td>
                        </tr>
                    </table>
                </div>

            </t>
        </t>
    </template>
</odoo>
