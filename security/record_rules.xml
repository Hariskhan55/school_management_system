<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Students -->
    <record id="student_teacher_read_rule" model="ir.rule">
        <field name="name">Teacher can read students</field>
        <field name="model_id" ref="model_school_student"/>
        <field name="groups" eval="[(4, ref('school_management_system.group_school_teacher'))]"/>
        <field name="domain_force">[(1, '=', 1)]</field>
    </record>

    <!-- Teachers -->
    <record id="teacher_teacher_read_rule" model="ir.rule">
        <field name="name">Teacher can read teachers</field>
        <field name="model_id" ref="model_school_teacher"/>
        <field name="groups" eval="[(4, ref('school_management_system.group_school_teacher'))]"/>
        <field name="domain_force">[(1, '=', 1)]</field>
    </record>

    <!-- Classrooms -->
    <record id="classroom_teacher_read_rule" model="ir.rule">
        <field name="name">Teacher can read classrooms</field>
        <field name="model_id" ref="model_school_classroom"/>
        <field name="groups" eval="[(4, ref('school_management_system.group_school_teacher'))]"/>
        <field name="domain_force">[(1, '=', 1)]</field>
    </record>

    <!-- Subjects -->
    <record id="subject_teacher_read_rule" model="ir.rule">
        <field name="name">Teacher can read subjects</field>
        <field name="model_id" ref="model_school_subject"/>
        <field name="groups" eval="[(4, ref('school_management_system.group_school_teacher'))]"/>
        <field name="domain_force">[(1, '=', 1)]</field>
    </record>

</odoo>
